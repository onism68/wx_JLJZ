  <label class="radio">
  <radio value="1"/>男
  <radio value="0"/>女
  </label>
  </radio-group>
  </view>
  </view>
  </view>
 
  <view class="page-body-setting-item" >
  <view class="own-info-item">
  <view class="info-name"> 籍贯:</view>
  <view class="info-text"><input name="local" class="input-text" value="陕西西安" /></view>
  </view>
  </view>
 
  <view class="page-body-setting-item" >
  <view class="own-info-item">
  <view class="info-name">电话号码:</view>
  <view class="info-text">  <input name="phone" type="number" class="input-text" maxlength="11" value="13800000000" /></view>
  </view>
  </view>
 
  <view class="page-body-setting-item" >
  <view class="own-info-item">
  <view class="info-name">生日:</view>
  <view class="info-text">
    <picker name="birthday" bindchange="bindbDateChange" mode="date" value="{{bdate}}" start="1990-01-01" end="2018-12-31">
    <view class="picker">
    {{bdate}}
    </view>
    </picker>
  </view>
  </view>
  </view>

   <view class="page-body-setting-item" >
  <view class="own-info-item">
  <view class="info-name">年龄:</view>
  <view class="info-text">  <input name="age" type="number" class="input-text" maxlength="3" value="18" /></view>
