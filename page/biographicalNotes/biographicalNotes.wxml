  <view class="info-text">  <input name="subject" class="input-text" value="测试1"/></view>
  </view>
  </view>

  <view class="page-body-setting-item" >
  <view class="own-info-item">
  <view class="info-name">行业:</view>
  <view class="info-text"><input name="hangye" class="input-text" value="软件工程师" /></view>
