<view class="kuang">
<textarea maxlength='200' bindinput='note' placeholder='请输入所获技能试证书，用空格分隔' name="">
    <!-- <text class='eColor'></text> -->
</textarea>
</view>

<view class="kuang">
<textarea maxlength='100' bindinput='award' placeholder='请输入所获奖项,用空格分隔'>
    <!-- <text class='eColor'></text> -->
</textarea>
</view>


<view class="kuang">
 <textarea maxlength='100' bindinput='ziping' placeholder='请输入简短自评'>
    <!-- <text class='eColor'></text> -->
</textarea>
</view>


<view class='kong'>
    <view class='ui_cell_bd'>点击下面方框上传自己的照片</view>
    <view class='ui_cell_ft'>{{uploaderNum}}/1</view>
</view>
<view class='ui_uploader_cell'>
    <view class='ui_uploader_item' wx:for="{{uploaderList}}" wx:key="{{index}}">
        <icon class='ui_uploader_item_icon' bindtap="cccc" data-index="{{index}}" type="clear" size="20" color="red"/>
        <image bindtap='showImg' data-index="{{index}}" src='{{item}}'></image>
    </view>
    <view class='ui_uploader' bindtap='upload' wx:if="{{showUpload}}"></view>
</view>

  <view>
  <button class="button" form-type="submit">提交信息</button>
  </view>
 
  </view>
 
</form>
</view>
