  <view class="info-name">实习2时间:</view>
  <view class="info-text">      
  <picker name="shi2date" bindchange="bindshi2DateChange" mode="date" value="{{shi2date}}" start="1990-01-01" end="2018-12-31">
    <view class="picker">
    {{shi2date}}
    </view>
